<div class="container">
  <div class="row">
    <div class="col-md-8 mx-md-auto px-md-4">
      <ul class='post-list'>
        <% @posts.each do |post| %>
        <li class="post">
          <h2><%= link_to post.title, post_path(post) %></h2>
          <p class="text-secondary" >Publicado por: <%= post.user.email %> hace <%= time_ago_in_words(post.created_at) %> </p>
          <p><%= truncate(post.content, length: 250) %></p>
          <% if user_signed_in? && current_user.email == post.user.email %>
              <%= link_to "Editar", edit_post_path(post) %>
              <%= link_to "Eliminar", post_path(post), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de que deseas eliminar este post?" } %>
          <% end %>
          <li class="post">
        <% end %>
      </ul>
    </div>
  </div>
</div>