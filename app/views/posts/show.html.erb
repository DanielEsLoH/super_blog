<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8">
    <article>
      <!-- Post header-->
      <header class="mb-4">
        <%= link_to t('posts.show.back_to_list'), posts_path %>
        <!-- Post title-->
        <h1 class="fw-bolder mb-1"> <%= @post.title %> </h1>
        <!-- Post meta content-->
        <div class="text-muted fst-italic mb-2"><%= t('posts.show.published') %><%= @post.created_at.strftime("%d - %m - %Y") %> <%= t('posts.show.for') %> <%= @post.user.email %></div>
      </header>

      <!-- Post content-->
      <section class="mb-5">
        <p class="fs-5 mb-4"> <%= @post.content %> </p>
      </section>
    </article>
      <!-- Comments section-->
      <section class="mb-5">
        <div class="card bg-light">
          <div class="card-body">
            <% if user_signed_in? %>
              <%= render 'comments/form', post: @post %>
            <% else %>    
              <p><%= t('posts.show.for_comment') %></p>
            <% end %>
            <% @post.comments.each do |comment| %>
              <div class="d-flex mb-4">
                <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                <div class="ms-3">
                  <div class="fw-bold"><%= comment.user.email %> <%= t('posts.show.comment') %> <%= time_ago_in_words(comment.created_at) %></div>
                  <%= comment.content %>
                </div>
              </div>
            <% end %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>