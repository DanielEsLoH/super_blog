<div class="container">
  <div class="row">
    <div class="col-md-8 mx-md-auto px-md-4">
      <%= link_to t('post.back_to_list'), posts_path %>
      <br>
      <br>
      <h1> <%= @post.title %> </h1>
      <p> <%= @post.content %> </p>

      <h2>Comentarios</h2>
      <% @post.comments.each do |comment| %>
        <div class="card">
          <div class="card-header">
            <p><%= comment.user.email %> comentó hace <%= time_ago_in_words(@post.created_at) %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><p><%= comment.content %></p></li>
          </div>
          <br>
      <% end %>
      <% if user_signed_in? %>
        <%= render 'comments/form', post: @post %>
      <% else %>
        <p>Inicia sesión para dejar un comentario</p>
      <% end %>
    </div>
  </div>
</div>