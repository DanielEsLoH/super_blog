<!DOCTYPE html>
<html>
  <head>
    <title>SuperBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
  </head>

  <body>
    <nav class="navbar bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">SuperBlog</a>
        <form class="d-flex">
          <div class="container-fluid">
            <% if current_user %>
              <div class="d-flex flex-row bd-highlight">
                <div class="p-2 bd-highlight">
                  <div class="d-inline-flex p-2 bd-highlight"><%= link_to 'Crear un nuevo post', new_post_path %></div> 
                </div>
                <div class="p-2 bd-highlight"><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-danger' %></div>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-outline-success" %>
              <%= link_to "Sing Up", new_user_registration_path, class: "btn btn-outline-success" %>
            <% end %>
          </div>
        </form>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
